<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/TandemIcon"
        android:adjustViewBounds="false"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/NameAgeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TandemIcon"
        android:paddingBottom="10dp"
        android:textColor="#FF000000"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/ISpeakText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TandemIcon"
        android:paddingBottom="10dp"
        android:layout_below="@+id/NameAgeText"
        android:textColor="#FF000000"
        android:textSize="14sp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/IWantLearnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/TandemIcon"
        android:paddingBottom="10dp"
        android:layout_below="@+id/ISpeakText"
        android:textColor="#FF000000"
        android:textSize="14sp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>